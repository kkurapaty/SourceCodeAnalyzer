<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converters="clr-namespace:SourceCodeAnalyzer.UI.Converters"
                    xmlns:wpf="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf">



    <Style x:Key="Style.Button.Default" TargetType="{x:Type Button}">
        <Setter Property="Padding" Value="8 4" />
        <Setter Property="Margin" Value="4"/>
        <Setter Property="Width" Value="75"/>
        <Setter Property="Height" Value="25"/>
        <Setter Property="Foreground" Value="Black" />
        <Setter Property="BorderBrush" Value="Gray"/>
        <Setter Property="FontFamily" Value="Segoe UI" />
    </Style>

    <Style x:Key="Style.Button.Browse" TargetType="{x:Type Button}" BasedOn="{StaticResource Style.Button.Default}">
        <Setter Property="Background" Value="#FF99CCFF" />
        <Setter Property="BorderBrush" Value="#FF6699CC" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#FF6699CC" />
                <Setter Property="Foreground" Value="White" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="Style.Button.Analyze" TargetType="{x:Type Button}" BasedOn="{StaticResource Style.Button.Default}">
        <Setter Property="Background" Value="#FF99FF99" />
        <Setter Property="BorderBrush" Value="#FF66CC66" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#FF66CC66" />
                <Setter Property="Foreground" Value="White" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="Style.Button.Cancel" TargetType="{x:Type Button}" BasedOn="{StaticResource Style.Button.Default}">
        <Setter Property="Background" Value="#FFFF9999" />
        <Setter Property="BorderBrush" Value="#FFCC6666" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#FFCC6666" />
                <Setter Property="Foreground" Value="White" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="Style.Button.About" TargetType="{x:Type Button}" BasedOn="{StaticResource Style.Button.Default}">
        <Setter Property="Background" Value="#434343" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="BorderBrush" Value="#CCC" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Foreground" Value="#FFCC6666" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="GroupBox">
        <Setter Property="Margin" Value="4" />
        <Setter Property="Padding" Value="4" />
        <Setter Property="HeaderTemplate">
            <Setter.Value>
                <DataTemplate>
                    <Label Content="{Binding }" FontWeight="SemiBold" FontSize="16" Margin="4,2"/>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="Expander">
        <Setter Property="BorderThickness" Value="0.5" />
        <Setter Property="BorderBrush" Value="LightGray" />
        <Setter Property="Padding" Value="4,2" />
        <Setter Property="HeaderTemplate">
            <Setter.Value>
                <DataTemplate>
                    <Label Content="{Binding }" Margin="2"/>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="ListView">
        <Setter Property="BorderThickness" Value="0" />
    </Style>
    <Style TargetType="{x:Type DataGrid}">
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="AlternatingRowBackground" Value="AliceBlue"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
    </Style>
    <Style TargetType="wpf:DefaultLegend">
        <Setter Property="Margin" Value="10" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>

    <Style TargetType="wpf:Axis">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Foreground" Value="#333" />
    </Style>

    <Style TargetType="wpf:PieChart">
        <Setter Property="Margin" Value="10" />
    </Style>

    <Style TargetType="wpf:CartesianChart">
        <Setter Property="Margin" Value="10" />
    </Style>

    <!-- For better distinction between bar series -->
    <Style TargetType="wpf:ColumnSeries">
        <Setter Property="MaxColumnWidth" Value="30" />
        <Setter Property="Fill" Value="{Binding Path=Title, Converter={StaticResource TitleToColorConverter}}" />
    </Style>

    <Style TargetType="ComboBox">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Padding" Value="3"/>
    </Style>

    <Style TargetType="TextBlock">
        <Setter Property="Margin" Value="2,0"/>
    </Style>

    <Style x:Key="Style.TextBlock.KeyLabel" TargetType="TextBlock">
        <Setter Property="Margin" Value="0,0,5,0"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    <Style x:Key="Style.TextBlock.KeyValue" TargetType="TextBlock">
        <Setter Property="Margin" Value="0,0,5,0"/>
        <Setter Property="Foreground" Value="Blue"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>


</ResourceDictionary>